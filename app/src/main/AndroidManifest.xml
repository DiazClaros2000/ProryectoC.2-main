<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.proyectoc">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.ProyectoC"
        tools:targetApi="31">

        <!-- Menú del administrador -->
        <activity
            android:name=".activities.AdminMenuActivity"
            android:exported="false" />

        <!-- Pantalla de Reportes -->
        <activity
            android:name=".empleados.actividades.ReportesActivity"
            android:exported="false" />

        <!-- Pantalla de gestión de precios y productos -->
        <activity
            android:name=".empleados.actividades.GestionPreciosProductosActivity"
            android:exported="false" />

        <!-- Pantalla de perfil de usuario -->
        <activity
            android:name=".activities.PerfilActivity"
            android:exported="false" />

        <!-- Menú de la gestión empleados -->
        <activity
            android:name=".empleados.MainEmpleados"
            android:exported="false"
            tools:ignore="MissingClass" />
        <activity
            android:name=".empleados.VerEmpleadosActivity"
            android:exported="false"
            tools:ignore="MissingClass" />
        <activity
            android:name=".empleados.AgregarEmpleadoActivity"
            android:exported="false"
            tools:ignore="MissingClass" />
        <activity
            android:name=".empleados.GestionarEmpleadosActivity"
            android:exported="false"
            tools:ignore="MissingClass" />
        <activity
            android:name=".empleados.EditarEmpleadoActivity"
            android:exported="false"
            tools:ignore="MissingClass" />

        <!-- Menú del usuario -->
        <activity
            android:name=".activities.UsuarioActivity"
            android:exported="false" />

        <activity
            android:name=".activities.MisVehiculosActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AgregarVehiculoActivity"
            android:exported="false" />

        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />

        <!-- Pantalla de inicio de sesión -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
