<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#B9E3F8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivFotoPerfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etFotoPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="URL foto de perfil"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintTop_toBottomOf="@id/ivFotoPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etNombrePerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintTop_toBottomOf="@id/etFotoPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etApellidoPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Apellido"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintTop_toBottomOf="@id/etNombrePerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etPaisPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="PaÃ­s"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintTop_toBottomOf="@id/etApellidoPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etCorreoPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Correo"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintTop_toBottomOf="@id/etPaisPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/etCorreoPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnEditarPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:textColor="#000000"
                style="@style/Widget.AppCompat.Button" />

            <Button
                android:id="@+id/btnGuardarPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:textColor="#000000"
                style="@style/Widget.AppCompat.Button"
                android:layout_marginStart="16dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
